<h1>Listing allergies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @allergies.each do |allergy| %>
      <tr>
        <td><%= allergy.name %></td>
        <td><%= allergy.user_id %></td>
        <td><%= link_to 'Show', user_allergy_path(allergy.user_id, allergy) %></td>
        <td><%= link_to 'Edit', edit_user_allergy_path(allergy.user_id, allergy) %></td>
        <td><%= link_to 'Destroy', user_allergy_path(allergy.user_id, allergy), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Allergy', new_user_allergy_path %>
