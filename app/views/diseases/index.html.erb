<h1>Listing diseases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diseases.each do |disease| %>
      <tr>
        <td><%= disease.name %></td>
        <td><%= disease.user_id %></td>
        <td><%= link_to 'Show', user_disease_path(disease.user_id, disease) %></td>
        <td><%= link_to 'Edit', edit_user_disease_path(disease.user_id, disease) %></td>
        <td><%= link_to 'Destroy', user_disease_path(disease.user_id, disease), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Disease', new_user_disease_path %>
